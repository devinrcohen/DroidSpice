<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ===== 1) Controls ===== -->
    <LinearLayout
        android:id="@+id/linControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- V1 -->
        <LinearLayout
            android:id="@+id/horizV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="48dp"
                android:text="V1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sbV1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:progress="50" />

            <EditText
                android:id="@+id/teV1"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:ems="6"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd" />

            <Spinner
                android:id="@+id/spinnerV1"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:entries="@array/voltage_suffix_array"
                android:padding="0dp" />
        </LinearLayout>

        <!-- R1 -->
        <LinearLayout
            android:id="@+id/horizR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="48dp"
                android:text="R1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sbR1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:progress="50" />

            <EditText
                android:id="@+id/teR1"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:ems="6"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd" />

            <Spinner
                android:id="@+id/spinnerR1"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:entries="@array/resistance_suffix_array"
                android:padding="0dp" />
        </LinearLayout>

        <!-- R2 -->
        <LinearLayout
            android:id="@+id/horizR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="48dp"
                android:text="R2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sbR2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:progress="50" />

            <EditText
                android:id="@+id/teR2"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:ems="6"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd" />

            <Spinner
                android:id="@+id/spinnerR2"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:entries="@array/resistance_suffix_array"
                android:padding="0dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- ===== 2) Netlist ScrollView (expands) ===== -->

    <!-- ===== 3) Button ===== -->

    <ImageView
        android:id="@+id/ivSchematic"
        android:layout_width="0dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/horizButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linControls"
        app:srcCompat="@drawable/p_mosfet_bodydiode"
        tools:srcCompat="@drawable/p_mosfet_bodydiode" />

    <LinearLayout
        android:id="@+id/horizButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/svOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSchematic">
        <Button
            android:id="@+id/btnRunOP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OP"
            app:layout_constraintHorizontal_bias="1.0"
             />

        <Button
            android:id="@+id/btnRunAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="AC"
            app:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:id="@+id/btnRunTran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_weight="1"
            android:text="TRAN"
            app:layout_constraintHorizontal_bias="1.0" />
    </LinearLayout>
    <!-- ===== 4) Output ScrollView (expands) ===== -->
    <ScrollView
        android:id="@+id/svOutput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizButtons">

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:selectAllOnFocus="true"
            android:text="(sim output)"
            android:textIsSelectable="true"
            tools:text="ngspice OK (init + version command)&#10;...&#10;V(2)=8.4V" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
